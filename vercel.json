{
  "version": 2,
  "builds": [
    {
      "src": "itam-saas/Client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "destination": "https://your-backend-url.herokuapp.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "itam-saas/Client/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "itam-saas/Client/build/index.html"
    }
  ]
}
